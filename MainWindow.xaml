<Window x:Class="slider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:slider"
        Background="#202020"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider Margin="40" x:Name="VolumeSlider" Maximum="100" Minimum="0" 
                        SmallChange="0.01" IsMoveToPointEnabled="True"/>
        <Button Height="40" Width="40" VerticalAlignment="Bottom">e</Button>
    </Grid>
</Window>
